<% nav_level = nav_level + 1 %>
<ul class="Nav__section Nav__section--level<%= nav_level %>">
  <% children.each do |child| %>
    <li class="Nav__item Nav__item--level<%= nav_level %>">
      <%= 
        render 'layouts/nav_link',
        name: child['name'],
        path: child['path'],
        icon: child['icon'] ,
        new_window: child['new_window'],
        nav_level: nav_level,
        current_path: current_path
      %>

      <% if child['children'] && nav_level < 5 %>
        <%= render 'layouts/nav_children', children: child['children'], nav_level: nav_level, current_path: current_path %>
      <% end %>
    </li>
  <% end %>
</ul>
